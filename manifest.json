{
  "manifest_version": 2, // Начиная с Chrome 18 ставим 2, иначе 1 (не поддерживается такое старьё)
  "name": "Content-manager features", // Название расширения
  "version": "1.2", // Версия расширения
  "permissions": [
		"tabs",
		"webRequest",
		"activeTab",
		"http://mta.ua/*"
  ],
 "content_scripts": [
    {
      "matches": ["http://mta.ua/*"],
      "js": ["app/js/lib/jquery.js", "app/js/lib/jquery-ui.js", "app/js/content/copyPaste.js", "app/js/content/slidePatch.js", "app/js/content/templatesModified.js"],
	  "css":["app/css/templates.css"],
	  "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "Content-manager features", // Заголовок, который отображается при наведении
    "default_icon": "app/img/search.png", // Иконка для отображения
    "default_popup": "index.html" // страница (окно), которая будет отображаться при клике на иконку 
  }
}